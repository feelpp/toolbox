// -*- mode: javascript -*-
{
    "Name": "Fluid Mechanics",
    "ShortName":"Fluid",
    "Models":
    {
        "use-model-name":1,
        "fluid":
        {
            "equations":"Stokes"
        }
    },
    "Parameters":
    {
        "ubar":"2",
        "vmax":"100.0",
        "height":"1.0"
    },
    "Materials":
    {
        "Fluid":{
            "rho":"1.0",
            "mu":"1.0",
            "k":"2400",
            "Cp":"1.0"
        }
    },
    "BoundaryConditions":
    {
        "velocity":
        {
            "Dirichlet":
            {
                "inlet":
                {
                   "expr":"{(vmax/(height-(height/2.))*(height/2.))*y*(height-y),0}:y:height:vmax"
                },
                "wall1":
                {
                    "expr":"{0,0}"
                },
                "wall2":
                {
                    "expr":"{0,0}"
                }
            }
        },
        "fluid":
        {
            "outlet":
            {
                "outlet":
                {
                    "expr":"0" 
                }
            }
        },
        "temperature":
        {
            "Dirichlet":
            {
                "inlet":
                {
                    "expr":"300*(y>0.15)*(y<0.25)+(293.15*(y<(0.15-1e-9)))+(293.15*(y>(0.25-1e-9))):y"
                    // "expr":"293.15"
                }
                //  "wall2":
                //  {
                //      "expr":"350"//"300" 
                // }
            }
            // "Neumann":
            // {
            //     "wall2":
            //     {
            //         "expr":"5e4" 
            //     }
            // },
            // "Robin":
            // {
            //     "wall2":
            //     {
            //         "expr1":"1e3",//16.667",// h coeff
            //         "expr2":"360"// temperature exterior
            //     }
            // }
        }
    },
    "PostProcess":
    {
        "use-model-name":1,
        "heat-fluid":
        {
            "Exports":
            {
                "fields":["fluid.velocity","fluid.pressure","heat.temperature","fluid.pid"]
            }
        },
        "fluid":
        {
            "Measures":
            {
                "Forces":"wall2",
                "Points":
                {
                    "pointA":
                    {
                        "coord":"{0.6,0.2,0}",
                        "fields":"pressure"
                    },
                    "pointB":
                    {
                        "coord":"{0.15,0.2,0}",
                        "fields":"pressure"
                    }
                }
            }
        },
        "heat":
        {
        }
    }

}
